pipeline {
    agent none
    stages {
        stage ('my build') {
            agent { label 'tomcat' }
            steps {
                sh 'sudo mvn package'
                sh 'mv target/hello-world-war-1.0.0.war /opt/tomcat/webapps'
            }
        }
        stage ('my deploy') {
            agent { label 'tomcat' }
            steps {
                sh 'sh /opt/tomcat/bin/shutdown.sh'
                sh 'sh /opt/tomcat/bin/startup.sh'
            }
        }
    }
}
