pipeline {
    agent none
    stages {
        stage ('build stage') {
            agent {label 'docker1'}
            steps {
                sh 'docker build -t mytomimage:${build_version} .'
            }
        }
        stage ('publish stage') {
            agent {label 'docker1'}
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerhubPassword', usernameVariable: 'dockerhubUser')]) {
                  sh 'docker login -u ${dockerhubUser} -p ${dockerhubPassword}'
                  sh 'docker tag mytomimage:${build_version} sangmeshbhure/tomimage:${build_version}'
                  sh 'docker push sangmeshbhure/tomimage:${build_version}'
                }
            }
        }
        stage ('deploy stage') {
            agent {label 'docker2'}
            steps {
                sh 'docker rm -f container1'
                sh 'docker run -d -p 8080:8080 --name container1 sangmeshbhure/tomimage:${build_version}'
            }
        }
    }
}    
