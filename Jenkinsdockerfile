pipeline {
    agent none
    stages {
        stage ('build stage') {
            agent { label 'docker1' }
            steps {
                sh 'docker build -t mytomimage .'
            }
        }
        stage ('publish stage') {
            agent {label 'docker1'}
            steps {
                sh 'docker login -u sangmeshbhure -p aws@123bhure'
                sh 'docker tag mytomimage sangmeshbhure/tomimage:latest'
                sh 'docker push sangmeshbhure/tomimage:latest'
            }
        }
        stage ('deploy stage') {
            agent { label 'docker2' }
            steps {
                sh 'docker pull sangmeshbhure/tomimage:latest'
                sh 'docker rmi -f sangmeshbhure/tomimage:latest'
                sh 'docker run -d -p 8080:8080 sangmeshbhure/tomimage:latest'
            }
        }
    }
}    
